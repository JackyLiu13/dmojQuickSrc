{
    "manifest_version": 3,
    "name": "DMOJ Source Code Linker",
    "version": "1.0",
    "description": "Adds a button to DMOJ submission pages.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://dmoj.ca/submissions/user/*/"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  